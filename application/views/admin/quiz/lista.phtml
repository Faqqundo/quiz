        <?php if ($this->quizes): ?>
            <?php $lp=1; ?>
            <?php foreach($this->quizes as $quiz): ?>
                <tr data-id_quizu="<?=$quiz->id?>">
                    <td><?=$lp++?></td>
                    <td><?=$quiz->nazwa?></td>
                    <td>
                        <input type="button" class="edytuj" value="Edytuj" />
                        <input type="button" class="usun" value="Usuń" />
                    </td>
                </tr>
            <?php endforeach; ?>
